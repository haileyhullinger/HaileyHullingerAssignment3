@{
    ViewBag.Title = "Add A Movie To The Joel Hilton Film Collection";
}

@model HaileyHullingerAssignment3.Models.MovieResponse
<div>
    <p>Enter movies into Joel Hilton's film Collection</p>

    <form asp-action="MovieForm" method="post">
        <!--input for category-->
        <div>
            <label>Category: </label>
            <input maxlength="25" asp-for="Category"/>
        </div>
        <br />

        <!--input for Title-->
        <div>
            <label>Title: </label>
            <input maxlength="25" asp-for="Title"/>
        </div>
        <br />

        <!--input for Director-->
        <div>
            <label>Director: </label>
            <input maxlength="25" asp-for="Director"/>
        </div>
        <br />

        <!--input for Rating, should be drop down menu-->
        <div>
            <label>Rating: </label>
            <select asp-for="Rating">
                <option value="">Select one</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <br />

        <!--input for edited, should be boolean-->
        <div>
            <label>Edited Version?  </label>
            <select asp-for="Edited">
                <option value="">Select one</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <br />

        <button type="submit">Submit movie</button>

    </form>
</div>
